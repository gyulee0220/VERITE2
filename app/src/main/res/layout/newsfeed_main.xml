<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 툴바 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/maintoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/maintoolbar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Newsfeed"
            android:textSize="30dp" />

    </android.support.v7.widget.Toolbar>

    <!--중앙 부분-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_2">

                <include
                    android:id="@+id/feed1"
                    layout="@layout/feed_box"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="IncludeLayoutParam" />

                <include
                    android:id="@+id/feed2"
                    layout="@layout/feed_box"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="IncludeLayoutParam" />

                <include
                    android:id="@+id/feed3"
                    layout="@layout/feed_box"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="IncludeLayoutParam" />

                <include
                    android:id="@+id/feed4"
                    layout="@layout/feed_box"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="IncludeLayoutParam" />

                <include
                    android:id="@+id/feed5"
                    layout="@layout/feed_box"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="IncludeLayoutParam" />

                <include
                    android:id="@+id/feed6"
                    layout="@layout/feed_box"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="IncludeLayoutParam" />

                <include
                    android:id="@+id/feed7"
                    layout="@layout/feed_box"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="IncludeLayoutParam" />

                <include
                    android:id="@+id/feed8"
                    layout="@layout/feed_box"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="IncludeLayoutParam" />

                <include
                    android:id="@+id/feed9"
                    layout="@layout/feed_box"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="IncludeLayoutParam" />

                <include
                    android:id="@+id/feed10"
                    layout="@layout/feed_box"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="IncludeLayoutParam" />

            </LinearLayout>
        </ScrollView>

    <!--하단 툴바-->

        <LinearLayout
            android:id="@+id/ntb_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">


            <Button
                android:id="@+id/ntb_Button1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="뉴스피드"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <Button
                android:id="@+id/ntb_Button2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CC0"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:text="관심글" />

            <Button
                android:id="@+id/ntb_Button3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="검색" />

            <Button
                android:id="@+id/ntb_Button4"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="환경설정" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>